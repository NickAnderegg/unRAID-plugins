<?if ($ipmi_network == "enable"):?>

<dl>
	<dt>Fan Control IP Address:</dt> 
	<dd>
		<select id="FANIP" class=" fancontrol-run" name="FANIP" size="1" title="ip address of ipmi fan to control">
